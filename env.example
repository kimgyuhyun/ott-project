# 데이터베이스 설정
DB_HOST=ott-postgres
DB_PORT=5432
DB_NAME=ott_project_db
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# Redis 설정
REDIS_HOST=ott-redis
REDIS_PORT=6379
REDIS_NAMESPACE=ott
RECENT_SEARCH_TTL_DAYS=30

# API 키들
TMDB_API_KEY=your_tmdb_api_key_here

# OAuth2 설정
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 메일 설정
MAIL_HOST=smtp.naver.com
MAIL_PORT=587
MAIL_USERNAME=your_email@naver.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=your_email@naver.com

# 쿠키 설정 (외부 접속용)
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Base URL (외부 접속용)
BASE_URL=http://localhost
# CORS 허용 오리진 (콤마로 구분)
APP_CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000

# Iamport 결제 설정
IAMPORT_MERCHANT_CODE=your_merchant_code
IAMPORT_API_KEY=your_api_key
IAMPORT_API_SECRET=your_api_secret
IAMPORT_WEBHOOK_URL=http://localhost/api/payments/webhook
IAMPORT_KAKAO_CHANNEL_KEY=your_kakao_channel_key
IAMPORT_TOSS_CHANNEL_KEY=your_toss_channel_key
IAMPORT_NICE_CHANNEL_KEY=your_nice_channel_key

# 결제 설정
PAYMENT_TEST_AMOUNT=1
PAYMENT_DEV_MODE=true
